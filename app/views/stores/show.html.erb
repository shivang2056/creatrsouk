<%= render layout: "shared/my_store" do %>
  <%= render "shared/notification" %>

  <div class="transition-all border border-gray-200 rounded-md bg-white p-4 mt-12">
    <div class="flex flex-col gap-1 w-full mb-4">
      <div class="flex justify-between">
        <h1 class="text-lg pb-0.5 leading-6 font-medium text-gray-900 mr-2 flex items-center">Your Store</h1>

        <%= link_to "Visit Store", @store.store_url, class: "flex justify-center mt-auto text-sm duration-200 border font-medium focus:outline-none focus:ring-2 inline-flex bg-white hover:bg-gray-300 text-gray-900 border-gray-900 rounded-md focus:z-10 py-2 px-4" %>
      </div>
    </div>

    <%= form_for(@store, url: store_path(@store), html: { method: :put, class: "space-y-4 w-1/2" }) do |f| %>
      <%= render "shared/error_messages", resource: @store %>

      <div>
        <%= f.label :subdomain, 'Sub Domain', class: "flex items-center gap-1 text-sm font-medium text-gray-700" %>
        <div class="mt-1 flex rounded-md shadow-sm">
          <%= f.text_field :subdomain, autofocus: true, class: "appearance-none block w-full px-3 py-2 h-5 border rounded-none rounded-l-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-gray-500 focus:border-gray-500 text-sm h-full border-gray-300 opacity-100" %>
          <span class="inline-flex items-center px-3 py-1 rounded-r-md border border-l-0 text-gray-500 text-sm">.creatrsouk.com/</span>
        </div>
      </div>

      <div>
        <%= f.label :background_color, 'Background Color', class: "flex items-center gap-1 text-sm font-medium text-gray-700" %>
        <%= f.color_field :background_color, class: "block w-full h-8 mt-1 focus:outline-none" %>
      </div>

      <div>
        <%= f.label :highlight_color, 'Highlight Color', class: "flex items-center gap-1 text-sm font-medium text-gray-700" %>
        <%= f.color_field :highlight_color, class: "block w-full h-8 mt-1 focus:outline-none" %>
      </div>

      <div class="pt-8">
        <%= f.submit "Update", class: "text-sm duration-200 border font-medium focus:outline-none focus:ring-2 inline-flex items-center whitespace-nowrap bg-gray-800 hover:bg-gray-900 text-white justify-center rounded-md shadow-sm border-transparent py-2 px-4" %>
      </div>
    <% end %>
  </div>
<% end %>
