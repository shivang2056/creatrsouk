<% img = "https://images.unsplash.com/photo-1674296115670-8f0e92b1fddb?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" %>

<div class="flex flex-col md:flex-row h-1/2 mt-8">
  <div class="basis-4/6 w-full md:w-1/2 overflow-auto border border-1 border-gray-900 border-r-0 border-b-0">
    <% if @product.image.attached? %>
      <%= image_tag @product.image, class: "w-full h-auto", alt: @product.name %>
    <% else %>
      <img class="w-full h-auto" src="<%= img %>" alt="<%= @product.name %>" />
    <% end %>
  </div>

  <div class="basis-2/6 w-full md:w-1/2 p-6 border border-1 border-gray-900 border-b-0">
    <h1 class="text-2xl font-bold mb-2"><%= @product.name %></h1>
    <p class="text-lg font-bold mb-4"><%= number_to_currency(@product.price) %></p>
    <p>Created by: <%= @product.user.email %></p>

    <% if product_created_by_current_user? %>
      <%= button_to 'Edit Product', edit_product_path(@product), method: :post, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 my-10 rounded' %>
    <% elsif product_bought_by_current_user? %>
      <div class="my-10 font-extrabold">Add Review</div>
    <% else %>
      <%= button_to 'Buy Now', buy_now_path(product_id: @product.id), method: :post, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 my-10 rounded' %>
    <% end %>
  </div>
</div>

<div class="pt-8 p-4 border border-1 border-gray-900">
  <h2 class="text-2xl font-bold mb-2">Description</h2>
  <p><%= @product.description %></p>
</div>
