<div class="flex justify-between">
  <%= link_to :back, class: "text-gray-500 hover:text-gray-900 flex space-x-1.5" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 9-3 3m0 0 3 3m-3-3h7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
    </svg>

    <span> Back </span>
  <% end %>

  <% if product_created_by_current_user? %>
    <%= link_to edit_product_path(@product),
          class: "text-sm duration-200 border font-medium focus:outline-none focus:ring-2 inline-flex bg-gray-800 hover:bg-gray-900 text-white border-gray-600 rounded-md focus:z-10 py-2 pr-4 pl-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 -1 27 27" stroke-width="1.5" stroke="currentColor" class="h-5 w-5 mr-2">
        <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
      </svg>

      <span>Edit Product</span>
    <% end %>
  <% end %>
</div>

<div class="w-[850px] mt-20 mx-auto flex flex-col bg-white shadow p-6 rounded-md border-r-2 border-b-2 border-gray-700">
  <div class="flex px-4 py-4">
    <%= image_tag @product.image, class: "w-[455px] h-[640px] filter saturate-50 rounded-md", alt: @product.name %>

    <div class="flex flex-col w-full px-8 pb-8 pt-8">
      <h1 class="text-4xl text-gray-900 tracking-tight leading-tight font-medium">
        <%= @product.name %>
      </h1>

      <h1 class="text-lg underline text-gray-400 font-light mt-1">
        By <%= @product.user.full_name %>
      </h1>

      <h1 class="text-4xl text-gray-900 font-semibold mt-10">
        <%= number_to_currency(@product.price) %>
      </h1>

      <% unless product_created_by_current_user? %>
        <%= link_to buy_now_path(product_id: @product.id), method: :post, data: { turbo: false },
          class: "flex justify-center space-x-1 mt-auto text-lg duration-200 border font-medium focus:outline-none focus:ring-2 inline-flex bg-white hover:bg-gray-300 text-gray-900 border-gray-900 rounded-md focus:z-10 py-2 pr-4 pl-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
            <path d="M2.25 2.25a.75.75 0 0 0 0 1.5h1.386c.17 0 .318.114.362.278l2.558 9.592a3.752 3.752 0 0 0-2.806 3.63c0 .414.336.75.75.75h15.75a.75.75 0 0 0 0-1.5H5.378A2.25 2.25 0 0 1 7.5 15h11.218a.75.75 0 0 0 .674-.421 60.358 60.358 0 0 0 2.96-7.228.75.75 0 0 0-.525-.965A60.864 60.864 0 0 0 5.68 4.509l-.232-.867A1.875 1.875 0 0 0 3.636 2.25H2.25ZM3.75 20.25a1.5 1.5 0 1 1 3 0 1.5 1.5 0 0 1-3 0ZM16.5 20.25a1.5 1.5 0 1 1 3 0 1.5 1.5 0 0 1-3 0Z" />
          </svg>

          <span>Buy Now</span>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="px-4 py-4 mt-6 border-t border-gray-100">
    <h1 class="text-gray-900 text-3xl">Product Description:</h1>

    <div class="text-gray-700 mt-4">
      <%= @product.description %>
    </div>
  </div>
</div>