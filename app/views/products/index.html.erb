<div class="flex justify-between items-center mb-32 ">
  <div class="flex flex-col text-left space-y-1 justify-between">
    <h4 class="text-2xl text-gray-900 font-bold">üîç Discover</h4>
    <p class="text-base text-gray-500 font-medium">Explore a World of Unique Products</p>
  </div>

  <div class="relative">
    <%= form_with method: :get, local: true, class: "flex" do |form| %>
      <%= form.text_field :query, value: params[:query], class: 'rounded-l-lg border-transparent flex-1 appearance-none border border-gray-300 w-full py-1 px-4 bg-white text-gray-700 placeholder-gray-400 shadow text-base focus:outline-none', placeholder: 'Search products...' %>
      <%= form.button class: 'text-sm bg-gray-800 hover:bg-gray-900 text-white py-2 px-2 rounded-r-lg' do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
        </svg>
      <% end %>
    <% end %>
  </div>
</div>

<div class="flex flex-wrap -m-4">
  <% @products.each do |product| %>
    <div class="p-4 w-full sm:w-1/2 lg:w-1/4">
      <%= link_to product_path(product) do %>
        <div class="h-96 transform transition duration-500 ease-in-out bg-white rounded-lg shadow hover:shadow-md hover:scale-105 hover:border-gray-300">
          <%= image_tag product.image.representation(:card), class: "h-60 w-full rounded-t-lg object-cover object-center filter saturate-50", alt: product.name %>

          <div class="h-36 p-4 flex flex-col">
            <h1 class="mb-1 text-xl font-semibold tracking-tight text-gray-800"><%= product.name %></h1>
            <p class="mb-3 text-sm font-normal text-gray-500 line-clamp-2"><%= product.description %></p>

            <div class="mt-auto flex justify-between text-gray-800">
              <div class="flex space-x-1.5">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                  <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0 0 21.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 0 0 3.065 7.097A9.716 9.716 0 0 0 12 21.75a9.716 9.716 0 0 0 6.685-2.653Zm-12.54-1.285A7.486 7.486 0 0 1 12 15a7.486 7.486 0 0 1 5.855 2.812A8.224 8.224 0 0 1 12 20.25a8.224 8.224 0 0 1-5.855-2.438ZM15.75 9a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" clip-rule="evenodd" />
                </svg>

                <h1 class="text-base underline"><%= product.user.full_name %></h1>
              </div>

              <div class="flex items-center justify-between">
                <div>
                  <span class="text-lg font-bold text-gray-900">$<%= product.price %></span>
                  <span class="text-xs font-medium text-gray-500 line-through">$<%= product.price + 20 %></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
