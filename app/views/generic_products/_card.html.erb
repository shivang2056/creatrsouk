<%= link_to product_page_path, data: { turbo_frame: "_top" } do %>
  <div class="h-[416px] transform transition duration-500 ease-in-out bg-white rounded-lg shadow hover:shadow-md hover:scale-105 hover:border-gray-300">
    <%= image_tag product.image, class: "h-60 w-full rounded-t-lg object-cover object-center filter saturate-50", alt: product.name %>

    <div class="h-44 p-4 flex flex-col justify-between">
      <div class="flex flex-col">
        <h1 class="mb-1 text-xl font-semibold tracking-tight text-gray-800"><%= product.name %></h1>
        <p class="mb-3 text-sm font-normal text-gray-500 line-clamp-2"><%= product.description %></p>
      </div>

      <div class="flex flex-col space-y-3">
        <div class="flex">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 -2 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 fill-gray-700">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
          </svg>

          <div class="text-sm ml-1">
            <% if product.average_rating > 0 %>
              <%= product.average_rating %> (<%= product.reviews_count %>)
            <% else %>
              No ratings
            <% end %>
          </div>
        </div>

        <div class="mt-auto flex justify-between text-gray-800">
          <div class="flex space-x-1.5">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
              <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0 0 21.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 0 0 3.065 7.097A9.716 9.716 0 0 0 12 21.75a9.716 9.716 0 0 0 6.685-2.653Zm-12.54-1.285A7.486 7.486 0 0 1 12 15a7.486 7.486 0 0 1 5.855 2.812A8.224 8.224 0 0 1 12 20.25a8.224 8.224 0 0 1-5.855-2.438ZM15.75 9a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" clip-rule="evenodd" />
            </svg>

            <h1 class="text-base underline"><%= product.user.full_name %></h1>
          </div>

          <% unless current_page?(user_purchases_path) %>
            <div class="flex items-center justify-between">
              <div>
                <span class="text-lg font-bold text-gray-900"><%= number_to_currency(product.price) %></span>
                <span class="text-xs font-medium text-gray-500 line-through"><%= number_to_currency(product.price + 20) %></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
