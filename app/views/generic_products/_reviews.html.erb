<dialog aria-labelledby="modal_title" data-controller="remote-modal" class="w-1/3 mx-auto border border-gray-300 rounded-md shadow-md">
  <div class="flex justify-between bg-gray-200 text-gray-700 p-3 w-full">
    <div class="flex gap-2 items-center">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 0 1 .865-.501 48.172 48.172 0 0 0 3.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" />
      </svg>

      <h2 id="modal_title" class="flex items-center justify-center font-semibold leading-none tracking-tight">
        <%= product.name %>
      </h2>
    </div>

    <form method="dialog" class="flex items-center justify-center font-semibold">
      <button aria-label="close">X</button>
    </form>
  </div>

  <div class="flex flex-col p-4">
    <div class="flex justify-between mb-4">
      <h1 class="text-lg font-semibold text-gray-900">Ratings</h1>

      <div class="flex gap-1 items-center">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5 fill-gray-700">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
        </svg>
        <span><%= product.average_rating %></span>
        <span class="pl-1">(<%= product.reviews_count %> ratings)</span>
      </div>
    </div>

    <% reviews.each do |review| %>
      <div class="flex flex-col py-4 space-y-2 text-sm text-gray-700 border-b border-gray-400">
        <%= render "reviews/rating", review: review %>

        <div>
          <%= review.comment %>
        </div>

        <div class="flex gap-2 items-center">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
            <path fill-rule="evenodd" d="M18.685 19.097A9.723 9.723 0 0 0 21.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 0 0 3.065 7.097A9.716 9.716 0 0 0 12 21.75a9.716 9.716 0 0 0 6.685-2.653Zm-12.54-1.285A7.486 7.486 0 0 1 12 15a7.486 7.486 0 0 1 5.855 2.812A8.224 8.224 0 0 1 12 20.25a8.224 8.224 0 0 1-5.855-2.438ZM15.75 9a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" clip-rule="evenodd" />
          </svg>

          <span class="font-semibold"> <%= review.reviewer_name %> </span>
        </div>
      </div>
    <% end %>
  </div>
</dialog>
