<% if user_signed_in? %>
  <div class="flex flex-col w-56 h-full bg-gray-100 fixed top-0 left-0 h-full w-64 overflow-y-auto z-30">
    <div class="flex flex-col flex-grow pt-5 pb-4 ps-4 overflow-y-auto">
      <div class="flex items-center flex-shrink-0 px-4">
        <img class="h-8 w-auto" src="<%= image_path('logo.svg') %>" alt="Your Logo">
        <span class="font-semibold">CreatrSouk</span>
      </div>
      <nav class="mt-5 flex-1 px-2 space-y-1">
        <%= link_to 'Dashboard', dashboard_path, class: "group flex items-center px-2 py-2 text-sm font-medium  rounded-md" +
                (current_page?(dashboard_path) ? " bg-white text-gray-800" : " hover:bg-gray-200 text-gray-700") %>

        <%= link_to 'My Products', my_products_path, class: "group flex items-center px-2 py-2 text-sm font-medium rounded-md" +
                (current_page?(my_products_path) ? " bg-white text-gray-800" : " hover:bg-gray-200 text-gray-700") %>

        <%= link_to 'Discover', discover_path, class: "group flex items-center px-2 py-2 text-sm font-medium rounded-md" +
                (current_page?(discover_path) ? " bg-white text-gray-800" : " hover:bg-gray-200 text-gray-700") %>

        <%= link_to 'Settings', account_path, class: "group flex items-center px-2 py-2 text-sm font-medium rounded-md" +
                (current_page?(account_path) ? " bg-white text-gray-800" : " hover:bg-gray-200 text-gray-700") %>

        <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete },
              class: "group flex items-center px-2 py-2 text-sm font-medium rounded-md hover:bg-gray-200 text-gray-700" %>
      </nav>
    </div>
  </div>
<% end %>