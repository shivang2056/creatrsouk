<div class="flex flex-col space-y-4">
  <div class="flex flex-col text-left space-y-1 justify-between">
    <h4 class="text-2xl text-gray-900 font-bold">⚙️ Settings</h4>
    <p class="text-base text-gray-500 font-medium">Adjust to your preference</p>
  </div>
  <div class="flex space-x-1 rounded-lg p-1.5 bg-gray-200" data-controller="tab">
    <%= link_to "Account", account_path,
          class: "rounded-md py-2 px-12 text-sm font-medium ring-white ring-opacity-60 ring-offset-2 ring-offset-white focus:outline-none #{account_settings_tab_color}",
          data: { turbo_frame: "tab_content", action: "click->tab#switch", tab_target: "link" } %>
    <%= link_to "Store", store_path,
          class: "rounded-md py-2 px-12 text-sm font-medium ring-white ring-opacity-60 ring-offset-2 ring-offset-white focus:outline-none #{store_settings_tab_color}",
          data: { turbo_frame: "tab_content", action: "click->tab#switch", tab_target: "link" } %>
    <%= link_to "Profile", my_profile_path,
          class: "rounded-md py-2 px-12 text-sm font-medium ring-white ring-opacity-60 ring-offset-2 ring-offset-white focus:outline-none #{profile_settings_tab_color}",
          data: { turbo_frame: "tab_content", action: "click->tab#switch", tab_target: "link" } %>
  </div>
  <div>
    <%= turbo_frame_tag "tab_content" do %>
      <%= yield %>
    <% end %>
  </div>
</div>
