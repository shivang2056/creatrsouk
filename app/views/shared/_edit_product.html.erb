<div class="flex justify-between mb-[52px]">
  <%= link_to product_path(@product), class: "text-gray-500 hover:text-gray-900 flex space-x-1.5" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 9-3 3m0 0 3 3m-3-3h7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
    </svg>

    <span> Back to listing </span>
  <% end %>
</div>

<div class="flex space-x-1 rounded-lg p-1.5 bg-gray-200 mb-16" data-controller="tab">
  <%= link_to "Product", edit_product_path(@product),
        class: "rounded-md py-2 px-12 text-sm font-medium ring-white ring-opacity-60 ring-offset-2 ring-offset-white focus:outline-none #{edit_product_tab_color}",
        data: { turbo_frame: "tab_content", action: "click->tab#switch", tab_target: "link" } %>
  <%= link_to "Attachments", product_attachments_path(@product),
        class: "rounded-md py-2 px-12 text-sm font-medium ring-white ring-opacity-60 ring-offset-2 ring-offset-white focus:outline-none #{product_attachments_tab_color}",
        data: { turbo_frame: "tab_content", action: "click->tab#switch", tab_target: "link" } %>
</div>

<div>
  <%= turbo_frame_tag "tab_content" do %>
    <%= yield %>
  <% end %>
</div>